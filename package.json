{
  "name": "md2pdf",
  "version": "0.1.0",
  "description": "Interactive Markdown to PDF CLI with template preview",
  "main": "dist/cli.js",
  "bin": {
    "md2pdf": "dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:main && npm run build:renderer && npm run build:assets",
    "build:main": "tsc -p tsconfig.json && chmod +x dist/cli.js",
    "build:renderer": "esbuild src/renderer/renderer.ts --bundle --platform=browser --format=iife --outfile=dist/renderer/renderer.js",
    "build:assets": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/index.html && cp src/renderer/styles.css dist/renderer/styles.css",
    "test": "npm run build:main && node --test dist/tests/*.test.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "markdown",
    "pdf",
    "localhost",
    "webapp",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "markdown-it": "^14.1.0",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-task-lists": "^2.1.1",
    "mermaid": "^11.10.1",
    "playwright-core": "^1.54.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.3",
    "esbuild": "^0.25.5",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
